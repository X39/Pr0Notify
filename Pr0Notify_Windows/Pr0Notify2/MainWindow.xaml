                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="ResizeMode" Value="CanResizeWithGrip">
                    <Setter Property="Template" Value="{StaticResource WindowTemplateKey}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="Pr0SliderStyle"  TargetType="{x:Type Slider}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Slider}">
                        <Grid Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*" MinHeight="{TemplateBinding Slider.MinHeight}"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TickBar Name="TopTick" SnapsToDevicePixels="True" Placement="Top" Fill="{StaticResource GlyphBrush}" Visibility="Collapsed" />
                            <Track Grid.Row="1" Name="PART_Track" Height="Auto" VerticalAlignment="Stretch">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge" Background="Red">
                                        <RepeatButton.Style>
                                            <Style TargetType="{x:Type RepeatButton}">
                                                <Setter Property="SnapsToDevicePixels" Value="true" />
                                                <Setter Property="OverridesDefaultStyle" Value="true" />
                                                <Setter Property="IsTabStop" Value="false" />
                                                <Setter Property="Focusable" Value="false" />
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type RepeatButton}">
                                                            <Border Background="{StaticResource Pr0grammOrange}" />
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </RepeatButton.Style>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb BorderBrush="{StaticResource HorizontalNormalBorderBrush}">
                                        <Thumb.Style>
                                            <Style TargetType="{x:Type Thumb}">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Thumb">
                                                            <Rectangle Height="Auto" Width="15" Fill="{StaticResource Pr0grammGreyOld}"/>

                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Thumb.Style>
                                        <Thumb.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientBrush.GradientStops>
                                                    <GradientStopCollection>
                                                        <GradientStop Color="#FFF" Offset="0.0"/>
                                                        <GradientStop Color="#CCC" Offset="1.0"/>
                                                    </GradientStopCollection>
                                                </GradientBrush.GradientStops>
                                            </LinearGradientBrush>
                                        </Thumb.Background>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge">
                                        <RepeatButton.Style>
                                            <Style TargetType="{x:Type RepeatButton}">
                                                <Setter Property="SnapsToDevicePixels" Value="true" />
                                                <Setter Property="OverridesDefaultStyle" Value="true" />
                                                <Setter Property="IsTabStop" Value="false" />
                                                <Setter Property="Focusable" Value="false" />
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type RepeatButton}">
                                                            <Border Background="{StaticResource Pr0grammTextBoxGrey}" />
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </RepeatButton.Style>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                            </Track>
                            <TickBar Name="BottomTick" SnapsToDevicePixels="True" Grid.Row="2" Fill="{TemplateBinding Foreground}" Placement="Bottom" Visibility="Collapsed" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="TickPlacement" Value="TopLeft">
                                <Setter TargetName="TopTick" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="TickPlacement" Value="BottomRight">
                                <Setter TargetName="BottomTick" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="TickPlacement" Value="Both">
                                <Setter TargetName="TopTick" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="BottomTick" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="GridPrivateMessages">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Height="Auto" Background="{StaticResource Pr0grammGrey}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" MinWidth="100"/>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="4*" MinWidth="200"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="tbSearchUser" Grid.Row="0" Style="{DynamicResource Pr0grammTextBoxStyle}" Width="Auto" Margin="5,5,5,5" HorizontalAlignment="Stretch"  VerticalAlignment="Top"/>
                    <ScrollViewer Margin="1,4,0,0" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Width="Auto" Style="{DynamicResource FlattenScrollViewerStyle}">
                        <ListBox Margin="1,0,0,0" Background="{StaticResource Pr0grammGrey}" x:Name="listBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Width="Auto" Style="{DynamicResource Pr0grammListBoxStyle}"/>
                    </ScrollViewer>
                    <Button x:Name="btnStartNewConversation" Grid.Row="2" Content="+ Add" Style="{DynamicResource Pr0grammButtonStyle}" Width="Auto" Height="28" Margin="5,5,5,5" HorizontalAlignment="Stretch"  VerticalAlignment="Bottom"/>
                </Grid>
                <GridSplitter VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="Auto" Width="5" Grid.Column="1" Background="{StaticResource Pr0grammOrange}"/>
                <Grid Background="{StaticResource Pr0grammGrey}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="Auto" Width="Auto" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8*" MinHeight="100"/>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" MinHeight="40"/>
                    </Grid.RowDefinitions>
                    <ScrollViewer x:Name="MessageDisplayScroll" Margin="1,0,0,0" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Width="Auto" Style="{DynamicResource FlattenScrollViewerStyle}" ScrollChanged="ScrollViewer_ScrollChanged">
                        <ListView x:Name="MessageDisplay" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Width="Auto" Style="{DynamicResource ListViewMessageStyle}" Margin="0, 0, 3, 0">
                            <ListView.Template>
                                <ControlTemplate>
                                    <ItemsPresenter Width="Auto" HorizontalAlignment="Stretch"/>
                                </ControlTemplate>
                            </ListView.Template>
                        </ListView>
                    </ScrollViewer>
                    <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Width="Auto" Height="5" Background="{StaticResource Pr0grammOrange}"/>
                    <Grid Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Width="Auto">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Background="#1B1E1F" AcceptsReturn="True" x:Name="chatInputBox" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Margin="5,5,5,5" Width="Auto" Style="{DynamicResource Pr0grammTextBoxStyle}" TextWrapping="Wrap"/>
                        <Button x:Name="chatCommitButton" Grid.Column="1" Content="Abschicken" Style="{DynamicResource Pr0grammButtonStyle}" Width="79" Height="28" Margin="5,5,5,5" VerticalAlignment="Center" Click="chatCommitButton_Click"/>
                    </Grid>
                </Grid>
            </Grid>
        </ControlTemplate>
        <ControlTemplate x:Key="GridLoginView">
            <Border BorderThickness="1" BorderBrush="{StaticResource Pr0grammOrange}">
                <Grid Width="Auto" Height="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="6*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Content="Username" Foreground="{StaticResource DefaultText}"/>
                    <TextBox x:Name="tbUsername" Grid.Column="1" Grid.Row="0" Style="{StaticResource Pr0grammTextBoxStyle}"/>
                    <Label Grid.Column="0" Grid.Row="2" Content="Passwort" Foreground="{StaticResource DefaultText}"/>
                    <PasswordBox x:Name="tbPassword" Grid.Column="1" Grid.Row="2" Style="{StaticResource Pr0grammPasswordBoxStyle}"/>
                    <Button x:Name="btnLogin" Grid.Column="1" Grid.Row="3" Content="Login" Style="{DynamicResource Pr0grammButtonStyle}" Width="79" Height="28" Margin="5,5,0,0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </ControlTemplate>
        <ControlTemplate x:Key="SyncRateView">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10,0,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBox x:Name="tbValue"               Grid.Column="0" Grid.Row="0" Style="{DynamicResource Pr0grammTextBoxStyle}"/>
                <Slider x:Name="sliderValue"            Grid.Column="1" Grid.Row="0" Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" SmallChange="1" Maximum="60" Minimum="1" LargeChange="10" Value="1" Style="{DynamicResource Pr0SliderStyle}" />
                <Label Content="in m"                   Grid.Column="0" Grid.Row="1" Foreground="{StaticResource DefaultText}"/>
                <Button x:Name="btnSyncIntervalConfirm" Grid.Column="1" Grid.Row="1" Content="Bestätigen" Style="{DynamicResource Pr0grammButtonStyle}" Width="79" Height="28" Margin="5,5,0,5" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </ControlTemplate>
        <ControlTemplate x:Key="ConfirmUI">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10" Width="Auto" Height="Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="tblockContent" Grid.Column="0" Grid.Row="0" TextWrapping="Wrap" Foreground="{StaticResource DefaultText}" Background="{StaticResource Pr0grammTextBoxGrey}" Padding="10"/>
                <Grid Grid.Column="0" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Width="Auto" Height="Auto" Margin="0, 10, 0, 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Button x:Name="btnConfirm" Grid.Column="0" Grid.Row="0" Content="Bestätigen" Style="{DynamicResource Pr0grammButtonStyle}" Width="79" Height="28" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Button x:Name="btnReject" Grid.Column="1" Grid.Row="0" Content="Nein Danke" Style="{DynamicResource Pr0grammButtonStyle}" Width="79" Height="28" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
        </ControlTemplate>
    </Window.Resources>
    <ContentControl x:Name="ViewPort"/>
</Window>
