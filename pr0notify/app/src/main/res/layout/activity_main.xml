<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="40"
        android:id="@+id/tb_UpdateInterval"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btn_setUpdateInterval"
        android:layout_toStartOf="@+id/btn_setUpdateInterval" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/btn_setUpdateInterval"
        android:layout_alignBottom="@+id/tb_UpdateInterval"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick_btn_updateInterval"
        android:layout_alignTop="@+id/tb_UpdateInterval" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cookie Setzen"
        android:id="@+id/btn_setLogin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick_btn_setLogin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Update Interval"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btn_setUpdateInterval"
        android:layout_alignEnd="@+id/btn_setUpdateInterval"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NA"
        android:id="@+id/label_cookie"
        android:layout_above="@+id/btn_setLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btn_setUpdateInterval"
        android:gravity="center"
        android:layout_alignRight="@+id/btn_setLogin"
        android:layout_alignEnd="@+id/btn_setLogin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Suchen"
        android:id="@+id/btn_searchForUpdate"
        android:layout_below="@+id/tb_UpdateInterval"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btn_setUpdateInterval"
        android:layout_alignEnd="@+id/btn_setUpdateInterval"
        android:onClick="btn_searchForUpdate_onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jetzt Synchronisieren"
        android:id="@+id/btn_syncNow"
        android:layout_below="@+id/btn_searchForUpdate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btn_searchForUpdate"
        android:layout_alignEnd="@+id/btn_searchForUpdate"
        android:onClick="onClick_btn_syncNow" />

</RelativeLayout>
